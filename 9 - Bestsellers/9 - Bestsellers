import csv

with open('Bestseller - Sheet1.csv', 'r', encoding='utf-8') as file:
    reader = csv.DictReader(file) 
    best_book = None
    best_sales = 0.0
    
    for row in reader:
        sales = float(row['sales in millions'])  
        if sales > best_sales:
            best_sales = sales
            best_book = row
            

with open('bestseller_info.csv', 'w', newline='', encoding='utf-8') as out_file:
    writer = csv.writer(out_file)
    
    writer.writerow(best_book.keys())
    
    writer.writerow(best_book.values())